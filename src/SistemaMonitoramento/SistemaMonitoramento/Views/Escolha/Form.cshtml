<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SME</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
</head>

<body class="bg-gradient-primary">
    
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row d-flex p-2 bd-highlight">
                    <div class="col-lg-12 p-4 text-center">
                        <img height="50px" class="img-profile rounded" src="img/logo.png">

                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Regiões</h1>
                            </div>

                            <form asp-action="FazLogin">
                                <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
                                <div class="form-group row">
                                    <div class="col-12">
                                        <input type="text" class="form-control form-control-user" id="name" placeholder="Nome"> <br>
                                    </div>
                                </div>
                                <div class="p-2"style="height: 300px; overflow:auto; border-style: solid; border-width: thin; ">

                                    @foreach(RegiaoViewModel regiao in ViewBag.Regioes)
                                    {
                                        <input type="checkbox" value=@regiao.Nome name=@regiao.Nome > @regiao.Nome<br />
                                    }

                                </div>
                                <br/>

                            <a href="dashboard-principal.html" class="btn btn-primary btn-user btn-block">
                            Adicionar Novo Grupo de Regiões Monitoradas
                            </a>
                        </form>
                        </div>
      
                        <hr>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>