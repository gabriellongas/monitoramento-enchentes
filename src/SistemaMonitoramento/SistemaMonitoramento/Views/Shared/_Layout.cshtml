<body>
    <header>
        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

            <!-- Topbar Logo -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="dashboard-principal.html">
                <img height="50px" class="img-profile rounded" src="~/img/logo.png">
            </a>

            <div class="topbar-divider d-none d-sm-block m-4 p-4"></div>

            <a class="nav-link" href="/Menu/MenuPrincipal" role="button">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small" >Painel de Controle</span>
            </a>

            <div class="topbar-divider d-none d-sm-block"></div>

            <a class="nav-link" href="/Menu/" role="button">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Suas Regiões</span>
            </a>

            <div class="topbar-divider d-none d-sm-block"></div>

            <a class="nav-link" href="/Usuario/Relacao" role="button">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Relação de Usuários</span>
            </a>

            <div class="topbar-divider d-none d-sm-block"></div>            

            <a class="nav-link" href="/Menu/Sobre" role="button">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Sobre</span>
            </a>

            <div class="topbar-divider d-none d-sm-block"></div>

            <a class="nav-link" href="/Login/FazLogoff" role="button">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Sair</span>
            </a>

            <div class="topbar-divider d-none d-sm-block"></div>


            <!-- Topbar Navbar -->
            <ul class="navbar-nav ml-auto">

                <!-- Nav Item - User Information -->
                <li class="nav-item dropdown no-arrow">
                    <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
