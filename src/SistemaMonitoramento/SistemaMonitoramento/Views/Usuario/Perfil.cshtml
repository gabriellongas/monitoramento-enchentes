@model UsuarioViewModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet">

    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" type="text/css">
    
</head>

<body class="bg-gradient-primary">
    <form asp-action="UsuarioVisualizacao">
        <div class="container">

            <!-- Outer Row -->
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <div class="card shadow col-12 mb-4">
                                    <div class="card-header  d-flex flex-row align-items-center justify-content-between">
                                        <h6 class=" font-weight-bold text-primary">Perfil</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="col-5 float-left">
                                            <img style="height:400px; width:300px;" id="Imagem" class="img-profile rounded" src="img/usuario.jpeg">
                                        </div>
                                        <label id="current_situation_label" class="col-5 float-left">
                                            <span class="m-0 font-weight-bold text-secondary">Nome: </span>@Model.Nome<br>
                                            <span class="m-0 font-weight-bold text-secondary">Email: </span>@Model.Email<br>
                                            <span class="m-0 font-weight-bold text-secondary">Primeiro Acesso: </span>@Model.DataCriacao.ToString("dd-MM-yyyy")
                                        </label>
                                    </div>
                                    <a href="/Usuario/Relacao" class="btn btn-primary btn-user btn-block">Voltar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

</html>

<script>
 var oFReader = new FileReader(); 
 oFReader.readAsDataURL(document.getElementById("Imagem").files[0]);
 oFReader.onload = function (oFREvent) {
 document.getElementById("imgPreview").src = oFREvent.target.result;
 };
 
</script>