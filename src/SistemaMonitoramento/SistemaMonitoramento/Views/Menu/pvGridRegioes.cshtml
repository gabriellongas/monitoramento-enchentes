@model List<RegiaoViewModel>

<div class="table-responsive ">
    <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Via</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>CEP</th>
                <th>Nível Atual</th>
                <th colspan="2">Ação</th>           
        
            </tr>
        </thead>

        @foreach(RegiaoViewModel regiao in ViewBag.Regioes)
        {
            <tbody>
                <td>@regiao.Nome</td>
                <td>@regiao.Numero </td>
                <td>@regiao.Bairro</td>
                <td>@regiao.CEP</td>
                <td>
                    <a id="level_label" onload="level_set()" style="color: black;" class="nav-link bg-warning rounded" href="/Regiao/DashboardEnchente?id=@regiao.Id">High</a>
                </td>  
                
                                                                    <td class="col-1">
                                                        <center>
                                                            <a class="nav-link" href="javascript:apagarRegiao(@regiao.Id)">
